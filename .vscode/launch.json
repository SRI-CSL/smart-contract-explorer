    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Examples",
            "program": "${workspaceFolder}/dist/cli/simulation.js",
            "args": [
                "--source",
                "${workspaceFolder}/resources/contracts/MultiSigWallet/MultiSigWallet-oxchild-apis/MultiSigWallet.impl.sol",
                "--target",
                "${workspaceFolder}/resources/contracts/MultiSigWallet/MultiSigWallet-consensys/MultiSigWallet.spec.sol",
                "--no-synthesize",
                "--no-verify"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceFolder}/dist/index.js",
            "preLaunchTask": "tsc: build - tsconfig.json",
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ]
        }
    ]
}
